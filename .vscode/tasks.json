{
    "version": "2.0.0",
    "tasks":
    [
      {
        "label": "build-normal",
        "type": "shell",
        "command": "${workspaceRoot}/Pawn/pawncc.exe",
        "args": ["'${file}'", "'-D${fileDirname}'", "'-;+'", "'-(+'", "'-d3'"],
  
        "group":
        {
          "kind": "build",
          "isDefault": true
        },
  
        "isBackground": false,
  
        "presentation":
        {
          "reveal": "silent",
          "panel": "dedicated"
        },
  
        "problemMatcher": "$pawncc"
      }
    ]
  }